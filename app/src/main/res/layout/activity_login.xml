<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <!--
    메인 색상코드 : #5544CC
    카카오 색상코드 : #F7E600
    네이버 색상코드 : #1EC800
    -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:src="@drawable/logo" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/login_text" />


    <Button
        android:id="@+id/loginKakaoBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#F7E600"
        android:text="카카오톡으로 시작"
        android:textColor="#3A1D1D"
        android:textSize="14sp"
        android:fontFamily="@font/elicedigitalbaeum" />

    <Button
        android:id="@+id/loginNaverBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#1EC800"
        android:text="네이버로 시작"
        android:textSize="14sp"
        android:fontFamily="@font/elicedigitalbaeum" />

    <ImageView
        android:id="@+id/loginNullBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/without_login" />

</LinearLayout>